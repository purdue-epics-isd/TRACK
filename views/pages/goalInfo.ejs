<!DOCTYPE html>
<html>

<head>
  <title>HOME</title>
  <link rel="stylesheet" href="/css/global.css" />
  <link rel="stylesheet" href="/css/goalInfo.css" />
</head>

<body>
  <%- include("navbar.ejs")%>
    <!-- NAME TAG -->
    <section>
      <div class="studentHeader">
        <div class="studentName">
          <%= goal.name %>
        </div>
        <div class="studentInfo">
          <a href="/student/<%= student.id%>/goal/<%= goal.id%>">
            <button class="studentInfoButton">
              <h2>GOAL DATA</h2>
            </button>
          </a>

          <a href="/student/<%= student.id%>/goal/<%= goal.id%>/goal_edit">
            <button class="studentInfoButton">
              <h2>EDIT</h2>
            </button>
          </a>

          <a href="/student/<%= student.id%>/goal/<%= goal.id%>/goal_delete"
            onclick="return confirm('Please confirm to delete this goal');">
            <button class="studentInfoButton">
              <h2>DELETE</h2>
            </button>
          </a>
        </div>

      </div>
    </section>
    <!-- END NAME TAG -->

    <!-- STUDENT INFO -->
    <section>
      <div class="studentInformation">
        <div class="box left">
          <h3>Goal Name</h3>
          <p>
            <%=goal.name%>
          </p>
          <h3>Goal Description</h3>
          <p>
            <%=goal.description%>
          </p>
        </div>
        <div class="box right">
          <h3>Dates</h3>
          <p>Start Date: <%=goal.startDate%>
          </p>
          <p>End Date: <%=goal.endDate%>
          </p>
          <h3>Goal Type</h3>
          <p>
            <%=goal.goalType%>
          </p>
          <h3>Method of Collection</h3>
          <p>
            <%=goal.methodOfCollection[0]%>
          </p>
        </div>
      </div>
    </section>
</body>

</html>