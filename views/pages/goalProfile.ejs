                                                                                let fileDataUrl = "<%=goalData.file%>"
                                                                                console.log(fileDataUrl)
                                                                                // var regex = /^data:.+\/(.+);base64,(.*)$/;
                                                                                // var matches = fileDataUrl.match(regex);
                                                                                // var ext = matches[1];
                                                                                // // console.log("ext", ext)
                                                                                // var data = matches[2];
                                                                                console.log("printme")
