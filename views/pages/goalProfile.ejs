                                                                                const blob = this.dataURItoBlob(data, ext);
                                                                                console.log("blob", blob)
                                                                                const url = URL.createObjectURL(blob);
                                                                                console.log("url", url)
                                                                                let aTag = document.getElementById("<%=goalData._id%>")
                                                                                console.log("aTag", aTag)
