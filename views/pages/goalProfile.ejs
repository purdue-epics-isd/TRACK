                                                                                for (let i = 0; i < fileDataUrl.length; i++) {
                                                                                    extIndex = i;
                                                                                    if (fileDataUrl[i] == '/') {
                                                                                        break;
                                                                                    }
                                                                                }
                                                                                var ext = fileDataUrl.substring(extIndex + 1, extIndex + 4);
                                                                                console.log("/ is at index ", extIndex)
                                                                                console.log("ext", ext)
                                                                                let dataIndex = 0
