<body>
  <!-- NAV BAR -->
  <%- include("navbar")%>
    <!-- NAME TAG -->
    <section>
      <div class="studentHeader">

        <div class="studentName">
          <h1>
            <%= student.firstname %>'s Profile
          </h1>
        </div>

        <div class="studentInfo">
          <button type="button" onclick="showInfo()" class="studentInfoButton" id="infoButton">
            <h2>INFO</h2>
